  <build>
    <plugins>
      <!-- Create directory or deployments fail below -->
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>

        <executions>
          <execution>
            <phase>initialize</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <mkdir dir="${bw-ear-deployment-location}" />
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>${version.exec.plugin}</version>
        <executions>
          <execution>
            <id>build-module-templates</id>
            <phase>process-resources</phase>
            <goals>
              <goal>exec</goal>
            </goals>

            <configuration>
              <executable>mvn</executable>
              <workingDirectory>${bw-wfmodules-location}</workingDirectory>
              <arguments>
                <argument>-Pbedework-dev</argument>
                <argument>-Dorg.bedework.thin.modules=true</argument>
                <argument>-Dorg.bedework.modules.parent.path=${modulesDir}</argument>
                <argument>clean</argument>
                <argument>package</argument>
              </arguments>
            </configuration>
          </execution>

          <!-- Build calendar wars and ears -->

          <execution>
            <id>build-deployable-xml-modules</id>
            <phase>process-sources</phase>
            <goals>
              <goal>exec</goal>
            </goals>

            <configuration>
              <executable>mvn</executable>
              <workingDirectory>${bw-project-xml}</workingDirectory>
              <arguments>
                <argument>-Pbedework-dev</argument>
                <argument>-Dbw-wildfly-feature-pack-build=true</argument>
                <argument>-Dorg.bedework.feature-build.deployment.properties=${bw.deployment.properties}</argument>
                <argument>-Dorg.bedework.feature-build.deployment.basedir=${project.build.directory}/generated/</argument>
                <argument>clean</argument>
                <argument>install</argument>
              </arguments>
            </configuration>
          </execution>

          <execution>
            <id>build-deployable-calendar-modules</id>
            <phase>process-sources</phase>
            <goals>
              <goal>exec</goal>
            </goals>

            <configuration>
              <executable>mvn</executable>
              <workingDirectory>${bw-project-deploy}</workingDirectory>
              <arguments>
                <argument>-Pbedework-dev</argument>
                <argument>-Dbw-wildfly-feature-pack-build=true</argument>
                <argument>-Dbw-bedework.project.directory=${bw-project-bedework}</argument>
                <argument>-Dorg.bedework.feature-build.deployment.properties=${bw.deployment.properties}</argument>
                <argument>-Dorg.bedework.feature-build.deployment.basedir=${project.build.directory}/generated/</argument>
                <argument>clean</argument>
                <argument>install</argument>
              </arguments>
            </configuration>
          </execution>

          <!-- Build calendar xsl war -->
          <execution>
            <id>build-deployable-calendar-xsl</id>
            <phase>process-sources</phase>
            <goals>
              <goal>exec</goal>
            </goals>

            <configuration>
              <executable>mvn</executable>
              <workingDirectory>${bw-project-calendar-xsl}</workingDirectory>
              <arguments>
                <argument>-Pbedework-dev</argument>
                <argument>-Dbw-wildfly-feature-pack-build=true</argument>
                <argument>-Dorg.bedework.feature-build.deployment.properties=${bw.deployment.properties}</argument>
                <argument>-Dorg.bedework.feature-build.deployment.basedir=${project.build.directory}/generated/</argument>
                <argument>clean</argument>
                <argument>install</argument>
              </arguments>
            </configuration>
          </execution>

          <!-- Build carddav wars and ears -->
          <execution>
            <id>build-deployable-carddav-modules</id>
            <phase>process-sources</phase>
