<?xml version="1.0" ?>
<layer-spec xmlns="urn:jboss:galleon:layer-spec:1.0"
            name="bw-calendar-h2">
    <dependencies>
        <layer name="bw-tzserver"/>
        <layer name="bw-calendar-rw"/>
        <layer name="h2-driver"/>
    </dependencies>

    <packages>
        <package name="config.calendar-h2"/>
        <package name="data.calendar-h2"/>
        <package name="deploy.calendar-rw"/>
        <package name="deploy.xml"/>
    </packages>

    <feature spec="subsystem.datasources">
        <feature spec="subsystem.datasources.data-source">
            <param name="data-source"           value="CalendarDS"/>
            <param name="use-ccm"               value="false"/>
            <param name="use-java-context"      value="true"/>
            <param name="jndi-name"             value="java:/CalendarDS"/>
            <param name="connection-url"        value="jdbc:h2:tcp://localhost/CalDb"/>
            <param name="driver-name"           value="h2"/>
            <param name="user-name"             value="sa"/>
            <param name="password"              value="sa"/>
            <param name="jta"                   value="true"/>
        </feature>
    </feature>
</layer-spec>